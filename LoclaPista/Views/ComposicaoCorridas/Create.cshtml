            </div>

        </div>      

        <div class="col-md-10">
                  
            Escolha a Data(Futura):     
            @Html.TextBox("data", "(dd/mm/yyyy)", new { @class = "date-picker" })
           


        </div>      
        <div class="col-md-10">

            Escolha a Horario(das 8:00 as 18:00):
            @Html.TextBox("hora", "(hh:mm)", new { @class = "date-picker" })



        </div>     

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

